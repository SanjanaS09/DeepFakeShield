# Multi-Modal Deepfake Detection System - Environment Variables
# Copy this file to .env and update with your actual values

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production

# Server Settings
HOST=127.0.0.1
PORT=5000

# Database Configuration
DATABASE_URL=sqlite:///deepfake_detection.db
# For PostgreSQL: postgresql://username:password@localhost/deepfake_detection
# For MySQL: mysql://username:password@localhost/deepfake_detection

# Model Configuration
DEVICE=cpu
# Use 'cuda' for NVIDIA GPU, 'mps' for Apple Silicon, 'cpu' for CPU-only
BATCH_SIZE=8
DETECTION_THRESHOLD=0.5
CONFIDENCE_THRESHOLD=0.7

# Logging
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# Security
JWT_SECRET_KEY=your-jwt-secret-key-here

# Redis (for caching and rate limiting)
REDIS_URL=redis://localhost:6379/0

# File Upload Limits
MAX_FILE_SIZE_MB=500

# External API Keys (if needed)
OPENAI_API_KEY=your-openai-api-key-if-needed
HUGGINGFACE_TOKEN=your-huggingface-token-if-needed

# Model Paths (optional - will use defaults if not set)
MODELS_DIR=./models/pretrained
UPLOAD_DIR=./uploads/temp

# Cross-Platform Settings
DEFAULT_PLATFORM=generic
# Options: whatsapp, youtube, zoom, generic

# Performance Settings
WORKERS=4
THREADS_PER_WORKER=2
TIMEOUT=300

# Development Settings
SQLALCHEMY_ECHO=False
TESTING=False
